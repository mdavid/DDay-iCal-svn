<?xml version="1.0" encoding="utf-8"?>
<rulesets
    xmlns="http://icalvalid.wikidot.com/validation"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://icalvalid.wikidot.com/validation schema.xsd">
    <!-- 
        Defines the available rulesets for iCalendar validation.        
    -->
    <ruleset
        name="Strict_2_0"
        nameString="ruleset_Strict_2_0"
        descriptionString="ruleset_Strict_2_0_Description">
        
        <!-- General Rules -->
        <rule name="emptyLine" file="rules/RFC2445/emptyLine.xml" />
        <rule name="crlfPairs" file="rules/RFC2445/4.1/crlfPairs.xml" />
        <rule name="lineFolding" file="rules/RFC2445/4.1/lineFolding.xml" />
        <rule name="lineFieldSeparators" file="rules/RFC2445/4.1.1/lineFieldSeparators.xml" />
        <rule name="multipleValues" file="rules/RFC2445/4.1.2/multipleValues.xml" />

        <!-- Calendar Properties -->
        <rule name="version" file="rules/RFC2445/4.6/version.xml" />
        <rule name="prodID" file="rules/RFC2445/4.6/prodID.xml" />
        <rule name="calScale" file="rules/RFC2445/4.6/calScale.xml" />
        <rule name="method" file="rules/RFC2445/4.6/method.xml" />
        
        <!-- Events -->
        <rule name="eventClassProperty" file="rules/RFC2445/4.6.1/eventClassProperty.xml" />
        <rule name="eventCreatedProperty" file="rules/RFC2445/4.6.1/eventCreatedProperty.xml" />
        <rule name="eventEndDurationConflict" file="rules/RFC2445/4.6.1/eventEndDurationConflict.xml" />
    </ruleset>

    <ruleset
        name="Compatibility_2_0"
        nameString="ruleset_Compatibility_2_0"
        descriptionString="ruleset_Compatibility_2_0_Description">
        
        <!-- General Rules -->        
        <rule name="emptyLine" file="rules/RFC2445/emptyLine.xml" />
        <rule name="crlfPairs" file="rules/RFC2445/4.1/crlfPairs.xml" />
        <rule name="lineFolding" file="rules/RFC2445/4.1/lineFolding.xml" />
        <rule name="lineFieldSeparators" file="rules/RFC2445/4.1.1/lineFieldSeparators.xml" />
        <rule name="multipleValues" file="rules/RFC2445/4.1.2/multipleValues.xml" />
        <rule name="inlineBinaryContent" file="rules/RFC2445/4.1.3/inlineBinaryContent.xml" />
        
        <!-- Calendar Properties -->
        <rule name="version" file="rules/RFC2445/4.6/version.xml" />
        <rule name="prodID" file="rules/RFC2445/4.6/prodID.xml" />
        <rule name="calScale" file="rules/RFC2445/4.6/calScale.xml" />
        <rule name="method" file="rules/RFC2445/4.6/method.xml" />

        <!-- Events -->
        <rule name="eventClassProperty" file="rules/RFC2445/4.6.1/eventClassProperty.xml" />
        <rule name="eventCreatedProperty" file="rules/RFC2445/4.6.1/eventCreatedProperty.xml" />
        <rule name="eventEndDurationConflict" file="rules/RFC2445/4.6.1/eventEndDurationConflict.xml" />
    </ruleset>    
</rulesets>
