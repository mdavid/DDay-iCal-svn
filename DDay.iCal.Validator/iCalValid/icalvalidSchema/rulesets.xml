        <rule name="eventDTEndProperty" file="rules/RFC2445/4.6.1/eventDTEndProperty.xml" />
        <rule name="eventDTStartProperty" file="rules/RFC2445/4.6.1/eventDTStartProperty.xml" />
        <rule name="eventDTStampProperty" file="rules/RFC2445/4.6.1/eventDTStampProperty.xml" />
