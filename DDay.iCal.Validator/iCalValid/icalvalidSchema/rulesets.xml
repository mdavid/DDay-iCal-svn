        <rule name="eventOrganizerProperty" file="rules/RFC2445/4.6.1/eventOrganizerProperty.xml" />
        <rule name="eventPriorityProperty" file="rules/RFC2445/4.6.1/eventPriorityProperty.xml" />
        <rule name="eventRDateProperty" file="rules/RFC2445/4.6.1/eventRDateProperty.xml" />
        <rule name="eventRecurIDProperty" file="rules/RFC2445/4.6.1/eventRecurIDProperty.xml" />
