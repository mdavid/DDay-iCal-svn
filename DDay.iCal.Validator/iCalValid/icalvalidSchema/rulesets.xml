        <rule name="lineFieldSeparators" file="rules/RFC2445/4.1.1/lineFieldSeparators.xml" />
        <rule name="multipleValues" file="rules/RFC2445/4.1.2/multipleValues.xml" />

        <!-- Calendar Properties -->
        <rule name="version" file="rules/RFC2445/4.6/version.xml" />
        <rule name="prodID" file="rules/RFC2445/4.6/prodID.xml" />
        <rule name="calScale" file="rules/RFC2445/4.6/calScale.xml" />
        <rule name="method" file="rules/RFC2445/4.6/method.xml" />
        
        <!-- Events -->
        <rule name="eventAttachProperty" file="rules/RFC2445/4.6.1/eventAttachProperty.xml" />
        <rule name="eventAttendeeProperty" file="rules/RFC2445/4.6.1/eventAttendeeProperty.xml" />
